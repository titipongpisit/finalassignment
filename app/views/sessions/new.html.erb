<h2>Login</h2>


<%= form_tag "/sessions" do %>

  <div><%= label_tag :username %><%= text_field_tag :username %></div>
  <div><%= label_tag :password %><%= password_field_tag :password %></div>

  <br>

  New user?  <%= link_to "Sign up", signup_url %> now!
  <br>
  <br>
  
  <%= submit_tag "Log In" %>

<% end %>